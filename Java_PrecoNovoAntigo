package preconovoantigo;

import java.util.Scanner;

/**
 *
 * @author aluno
 */
public class PrecoNovoAntigo {

 
        public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        double perc;

        System.out.println("Digite o pre√ßo atual ");
        double precoNovo = scan.nextDouble();
        System.out.println("Digite o preco antigo ");
        double precoAntigo = scan.nextDouble();
              //calculo

      
        double aumento = precoNovo - precoAntigo;
        System.out.println("Aumento: " + aumento);
        
        perc = aumento = aumento/precoAntigo;
        System.out.println("Porcentagem: " + perc);
        
    }
}
    
    
}
